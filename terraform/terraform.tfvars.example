# terraform.tfvars.example - Example Terraform Variables
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region

# Project Configuration
project_name = "ibex-devops-task"  # Change to your project name
environment  = "dev"               # dev, staging, or prod

# VPC and Networking Configuration
vpc_cidr            = "10.0.0.0/16"   # VPC CIDR block
public_subnet_cidr  = "10.0.1.0/24"   # Public subnet CIDR
private_subnet_cidr = "10.0.2.0/24"   # Private subnet CIDR

# EC2 Configuration
instance_type = "t2.micro"  # Instance size (t2.micro is free tier)

# Security Configuration
# IMPORTANT: Replace with your actual IP address for better security
# Get your IP from: https://whatismyipaddress.com/
# Format: ["YOUR_IP_ADDRESS/32"] for single IP or ["IP1/32", "IP2/32"] for multiple
allowed_ssh_ips = ["0.0.0.0/0"]  # CHANGE THIS - currently allows SSH from anywhere

# S3 Configuration
# Must be globally unique - add a random suffix, your username, or timestamp
# Example: "ibex-devops-artifacts-john-doe-2025" or "ibex-devops-artifacts-abc123"
s3_bucket_name = "ibex-devops-task-bucket-YOUR_UNIQUE_SUFFIX"

# IAM Configuration
create_iam_user = true  # Set to false if you don't need a CI/CD IAM user

# Docker Configuration
docker_image        = "nginx:latest"           # Docker image to deploy
docker_hub_username = "your_dockerhub_username"  # Your Docker Hub username (keep quotes)

